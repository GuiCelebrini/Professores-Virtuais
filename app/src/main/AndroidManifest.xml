<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.guicelebrini.professoresvirtuais">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_release"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_release"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProfessoresVirtuais">
        <activity android:name=".activity.AppActivity"></activity>
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <queries>
        <intent>
            <action android:name="com.google.android.youtube.api.service.START" />
        </intent>
    </queries>

</manifest>